cmake_minimum_required(VERSION 2.8.2)
project(abc-download NONE)

include(ExternalProject)
ExternalProject_Add(ABC_EXTERNAL
                    GIT_REPOSITORY https://github.com/berkeley-abc/abc.git
                    SOURCE_DIR "${CMAKE_BINARY_DIR}/abc-src"
                    BINARY_DIR "${CMAKE_BINARY_DIR}/abc-build"
                    PATCH_COMMAND patch -p1 < ${CMAKE_CURRENT_SOURCE_DIR}/abc.patch
                    CONFIGURE_COMMAND ""
                    BUILD_COMMAND ""
                    INSTALL_COMMAND cmake -E echo "Skipping install step."
                    #TEST_COMMAND ""
                    )
